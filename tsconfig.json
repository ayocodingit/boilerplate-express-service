{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./build",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": false,
    "declaration": true,
    "removeComments": true,
    "skipLibCheck": true,
  },
  "include": [
    "*/lang/locales/*.json",
    "*/*.ts",
  ],
  "exclude": [
    "./coverage",
    "**/*_test.ts"
  ]
}